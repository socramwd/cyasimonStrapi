{
  "kind": "collectionType",
  "collectionName": "simon_posts",
  "info": {
    "singularName": "simon-post",
    "pluralName": "simon-posts",
    "displayName": "Simon-Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "contenido": {
      "type": "richtext",
      "required": true
    },
    "imagen": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "fecha": {
      "type": "date",
      "required": true
    },
    "categoria": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "uid",
      "targetField": "titulo",
      "required": true
    }
  }
}
